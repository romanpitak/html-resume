
//- One position
mixin position(job)
    section
        header: h3.position=job.position
        != markdown(job.description)

//- Multiple positions for one job
mixin positions(job)
    if job.positions
        for position in job.positions
            +position(position)
    else
        +position(job)

//- Work experience
mixin jobs(jobs)
    each job in jobs
        article.job
            header
                .timeframe= job.when
                .employer= job.employer
            +positions(job)
